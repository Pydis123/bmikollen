{
    "name": "bmi/bmikollen",
    "description": "BMI Weight and Calorie Tracker",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "nikic/fast-route": "^1.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
